{
  "name": "brownie",
  "displayName": "Brownie",
  "version": "0.0.1",
  "description": "Brownie my best assistant",
  "author": "Yudu Ban <banyudu@gmail.com>",
  "scripts": {
    "clean": "rimraf dist build/chrome-mv3-dev build/chrome-mv3-prod build/firefox-mv2-dev build/firefox-mv2-prod",
    "dev": "plasmo dev",
    "build": "npm run clean && plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "idb-keyval": "^6.2.2",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.19",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://arxiv.org/*",
      "https://www.alphaxiv.org/*"
    ],
    "permissions": [
      "storage",
      "devtools",
      "tabs",
      "activeTab"
    ],
    "devtools_page": "devtools.html"
  }
}
